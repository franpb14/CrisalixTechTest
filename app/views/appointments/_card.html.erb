<div class="row justify-content-center mt-3 mb-3">
  <div class="appointment-card card text-left ">
    <div class="card-body">
      <h4 class="card-title">Appointment with: <%= "#{local_assigns[:user].surname}, #{local_assigns[:user].name}" %></h4>
      <p class="card-text">The appointment is the <%= local_assigns[:appointment].date %></p>
      <% if current_user.doctor? %>
        <% if appointment.photo1.attached? %>
          <div class="row justify-content-center">
            <a class="text-center linksMore">See more</a>
            <div class="row justify-content-between mt-2 hidden groupPhotos">
              <%= image_tag local_assigns[:appointment].photo1, class: "col-md-3" %>
              <%= image_tag local_assigns[:appointment].photo2, class: "col-md-3" %>
              <%= image_tag local_assigns[:appointment].photo3, class: "col-md-3" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>